<?xml version="1.0" encoding="utf-8" ?>
<config>
  <item
    name="Entity"
    template="Entity.xslt"
    module="interface"
    fileFormat="{0}"
    subFolder="Entities"
    extension="cs"
    handler="Mercurius.CodeBuilder.CSharp.RegisterCreatedFileHandler,Mercurius.CodeBuilder.CSharp"
    project="" />
  
  <item
    name="SearchResponse"
    template="SearchResponse.xslt"
    module="interface"
    subFolder="SearchObjects"
    fileFormat="{0}SO"
    extension="cs"
    handler="Mercurius.CodeBuilder.CSharp.RegisterCreatedFileHandler,Mercurius.CodeBuilder.CSharp"
    project="" />

  <item
    name="SqlMap"
    dependency="Entity,SearchResponse"
    template="Dapper\SqlMap.xslt"
    module="implement"
    subFolder="Scripts\{dbType}"
    fileFormat="{0}Service"
    extension="xml"
    ignoreView="true"
    handler="Mercurius.CodeBuilder.CSharp.RegisterCreatedFileHandler,Mercurius.CodeBuilder.CSharp"
    project=""/>

  <item
    name="Contract"
    dependency="Entity,Response,SearchResponse"
    template="IContract.xslt"
    module="interface"
    subFolder="Services"
    fileFormat="I{0}Service"
    extension="cs"
    ignoreView="true"
    handler="Mercurius.CodeBuilder.CSharp.RegisterCreatedFileHandler,Mercurius.CodeBuilder.CSharp"
    project="" />

  <item
    name="Service"
    dependency="Entity,SearchResponse,Contract"
    template="Dapper\Service.xslt"
    module="implement"
    subFolder="Services"
    fileFormat="{0}Service"
    extension="cs"
    ignoreView="true"
    handler="Mercurius.CodeBuilder.CSharp.RegisterCreatedFileHandler,Mercurius.CodeBuilder.CSharp"
    project="" />
</config>