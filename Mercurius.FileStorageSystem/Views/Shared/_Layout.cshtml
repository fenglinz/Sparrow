@{
    Layout = "_BaseLayout.cshtml";
}

@section Head{
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
}

<div class="navbar navbar-default navbar-inverse navbar-fixed-top" role="banner">
    <div class="container-fluid" style="margin-left: 15px;">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-navbar" aria-controls="bs-navbar" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <i class="glyphicon glyphicon-home" style="top:2px;"></i> 首页
            </a>
        </div>
        <div id="bs-navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action("WebApiDocument", "Home")">
                        <i class="glyphicon glyphicon-book"></i> Web Api开发文档
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ClearRubbish", "Home")">
                        <i class="glyphicon glyphicon-trash"></i> 清理垃圾文件
                    </a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container-fluid body-content" style="margin-top: 58px;">
    @RenderBody()
</div>
<footer class="navbar-inverse" style="width: 100%; padding:15px 5px; color: #fff;position: absolute; bottom: 0;border-radius:0;">
    <div class="container-fluid">
        版权所有 &copy; @DateTime.Now.Year - 文件管理系统
    </div>
</footer>
@Scripts.Render("~/bundles/main")
@RenderSection("Scripts", required: false)
