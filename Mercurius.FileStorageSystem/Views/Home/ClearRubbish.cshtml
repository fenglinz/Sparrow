@{
    this.ViewBag.Title = "清理垃圾文件";    
}

@section Scripts{
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var hub = $.connection.clearRubbishFiles;

            hub.client.Message = function (message) {
                if (message == '--start--') {
                    $('#messages').show();
                    $('#messages').html('');
                } else if (message == '--end--') {
                    $('#btnClear').prop('disabled', false);
                }
                else {
                    $('#messages').append('<p>' + message + '</p>');
                }
            };

            $('#btnClear').click(function () {
                $('#btnClear').prop('disabled', true);

                $.connection.hub.start().done(function () {
                    hub.server.clear();
                });
            });
        });
    </script>
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading" style="display:inline-block;width:100%;">
            <h4 class="pull-left">清理垃圾文件</h4>
            <button id="btnClear" class="btn btn-danger pull-right" style="margin-top:3px;">
                <i class="glyphicon glyphicon-remove-circle"></i> 清理
            </button>
        </div>
        <div id="messages" class="panel-body">

        </div>
    </div>
</div>