@model Globalization

@section Scripts
{
    @Scripts.Render("~/bundles/validate")

    <script type="text/javascript">
        $(function () {
            window.validator('#frm1');
        });
        function OnSave() {
            $('#frm1').submit();
        }
    </script>
}
@using (Ajax.BeginForm("CreateOrUpdateLocalResource", "Globalization", null, new AjaxOptions { HttpMethod = "POST" }, new { @id = "frm1", @class = "form-horizontal form" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.FormGroupFor(Screen.SM).TextBoxFor(m => m.Area, 2, 9)
    @Html.FormGroupFor(Screen.SM).TextBoxFor(m => m.Controller, 2, 9, ValidRule.Required)
    @Html.FormGroupFor(Screen.SM).TextBoxFor(m => m.View, 2, 9, ValidRule.Required)
    @Html.FormGroupFor(Screen.SM).TextBoxFor(m => m.Key, 2, 9, ValidRule.Required)
    @Html.FormGroupFor(Screen.SM).TextBoxFor(m => m.Value, 2, 9, ValidRule.Required)
    @Html.FormGroupFor(Screen.SM).TextAreaFor(m => m.Remark, 2, 9, 4)
}