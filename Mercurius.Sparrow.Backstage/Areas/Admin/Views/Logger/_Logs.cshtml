@using Mercurius.Prime.Core.Logger

@model ResponseSet<Log>

@Html.DataGridFor(Model,
    t => t.Id("logsGrid").ShowLineNumber()
          .RowData("data-id", c => c.Id)
          .Column(c => c.LogOnName, "用户", 120)
          .Column(c => c.LogOnIP, "用户IP地址", 140)
          .Column(c => c.ModelName, "模块", 180)
          .Column(c => c.Level, "级别", 60)
          .Column(c => c.OccurrenceDateTime, "记录时间", 150, "{0:yyyy-MM-dd HH:mm:ss}")
          .Column(c => c.Summary, "日志简介")
          .Paging("Search", "Logger", this.ViewBag.SO, ajaxOptions: new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "logsContainer", OnSuccess = "OnSearchSuccess" })
)