@model Mercurius.Sparrow.Entities.WebApi.Api

@section Scripts{
    <script type="text/javascript">
        function OnSave() {
            $('#ajaxForm').submit();
        }
    </script>
}

@using (Ajax.BeginForm("CreateOrUpdate", "Route", new AjaxOptions { HttpMethod = "POST" }, new { @id = "ajaxForm", @class = "form-horizontal form", @role = "form" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="Route">路由地址</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Route, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="HttpVerb">访问方式</label>
        <div class="col-sm-10">
            <label class="control-label">@Html.RadioButtonFor(x => x.HttpVerb, "GET", new { @class = "radio-inline", @checked = "checked" }) GET</label>
            <label class="control-label">@Html.RadioButtonFor(x => x.HttpVerb, "POST", new { @class = "radio-inline" }) POST</label>
            <label class="control-label">@Html.RadioButtonFor(x => x.HttpVerb, "PUT", new { @class = "radio-inline" }) PUT</label>
            <label class="control-label">@Html.RadioButtonFor(x => x.HttpVerb, "DELETE", new { @class = "radio-inline" }) DELETE</label>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="Description">路由描述</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @style = "height: 100px;" })
        </div>
    </div>
    @*<div class="form-group form-group-sm">
            <label class="col-sm-2 control-label" for="Description">控制器</label>
            <div class="col-sm-10">
                <label class="control-label">@Html.RadioButtonFor(x => x.HttpVerb, true, new { @class = "radio-inline" }) 是</label>
                <label class="control-label">@Html.RadioButtonFor(x => x.HttpVerb, false, new { @class = "radio-inline" }) 否</label>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label text-left" for="Description">状态</label>
            <div class="col-sm-10">
                <label class="control-label">启用：@Html.RadioButtonFor(x => x.HttpVerb, true, new { @class = "radio-inline" })</label>
                <label class="control-label">禁用：@Html.RadioButtonFor(x => x.HttpVerb, false, new { @class = "radio-inline" })</label>
            </div>
        </div>*@
}