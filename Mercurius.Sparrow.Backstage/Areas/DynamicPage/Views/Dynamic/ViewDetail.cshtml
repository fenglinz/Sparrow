@using Mercurius.Siskin.Backstage.Areas.DynamicPage.Models.Dynamic
@model CreateOrUpdateModel

@section Styles{
    <style type="text/css">
        .form-control {
            height: auto;
            min-height: 34px;
            max-height: 200px;
            overflow: auto;
        }
    </style>
}

@if (Model.Table != null)
{
	var columns = Model.GetColumns();
	var showColumns = columns.Where(s => !s.IsPrimaryKey);

    <div class="header">
        查看<text>@Model.Table.Comments</text>信息
    </div>
    <div class="form-horizontal" style="margin-top:10px;">
        @foreach (var item in showColumns)
        {
            if (item.Visible == true)
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="@item.Column">
                        @item.ColumnLabel
                    </label>
                    <div class="col-sm-8">
                        @if (string.IsNullOrWhiteSpace(item.DictionaryKey))
                        {
                            <span class="form-control">@Model.GetValue(item.Name)</span>
                        }
                        else
                        {
                            @Html.CreateDropdownList(item.DictionaryKey, new { @id = item.Column, name = item.Column, @class = "form-control", @disabled = "disabled" }, Model.GetValue(item.Name))
                        }
                    </div>
                </div>}
        }
        <div class="form-group form-group-sm">
            <label class="col-sm-2">&nbsp;</label>
            <div class="col-sm-8">
                <a href="@Url.Action("Index", new { @id = string.Format("{0}.{1}", Model.Table.Schema, Model.Table.Name) })" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i> 返回
                </a>
            </div>
        </div>
    </div>
}