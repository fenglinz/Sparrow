@using Mercurius.News.Interfaces.Entities

@model ResponseSet<News>

@{
    ViewBag.Title = "新闻-Home Page";
}

@if (Model.HasData())
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>序号</th>
                <th>分类</th>
                <th>标题</th>
                <th>创建日期</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.Datas)
            {
                <tr>
                    <td>@data.RowIndex</td>
                    <td>@data.Category</td>
                    <td>@data.Title</td>
                    <td>@data.PublishDateTime</td>
                </tr>
            }
        </tbody>
    </table>
}