<?xml version="1.0" encoding="utf-8"?>
<sqlMapConfig xmlns="http://ibatis.apache.org/dataMapper">
  <properties resource="App_Data/properties.config" />
  <settings>
    <setting validateSqlMap="false" />
    <setting cacheModelsEnabled="true" />
    <setting useStatementNamespaces="true" />
    <setting useReflectionOptimizer="true" />
    <setting useEmbedStatementParams="true" />
  </settings>
  <providers resource="App_Data/IBatisNet/providers.config" />
  <database>
    <provider name="sqlServer2.0" />
    <dataSource name="MSSQLDataSource" connectionString="Data Source=${rhost};Initial Catalog=${rsid};Persist Security Info=True;User ID=${rusername};Password=${rpassword};Min Pool Size=20;" />
  </database>
  <alias>
    <typeAlias alias="DataTable" type="System.Data.DataTable" />
    <typeAlias alias="Params" type="System.Collections.IDictionary" />
    <typeAlias alias="Entry" type="Mercurius.Siskin.Entities.Chart.Entry, Mercurius.Siskin.Entities" />
    <typeAlias alias="Series" type="Mercurius.Siskin.Entities.Chart.Series, Mercurius.Siskin.Entities" />
    <typeAlias alias="SearchObject" type="Mercurius.Siskin.Entities.SearchObject, Mercurius.Siskin.Entities" />
  </alias>
  <sqlMaps>
    <!-- 基础模块 -->
    <sqlMap embedded="Core.MSSQL.Logger.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="Core.MSSQL.Dictionary.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="Core.MSSQL.SystemSetting.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="Core.MSSQL.Globalization.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="Core.MSSQL.RepositoryUtils.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="Core.MSSQL.FileStorage.xml, Mercurius.Siskin.Repositories" />
    
    <!-- 基于角色访问控制(RBAC)模块 -->
    <sqlMap embedded="RBAC.MSSQL.User.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="RBAC.MSSQL.Role.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="RBAC.MSSQL.Permission.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="RBAC.MSSQL.Recyclebin.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="RBAC.MSSQL.Organization.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="RBAC.MSSQL.HomeShortcut.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="RBAC.MSSQL.Button.xml, Mercurius.Siskin.Repositories" />

    <!-- 动态属性模块 -->
    <sqlMap embedded="Dynamic.MSSQL.ExtensionProperty.xml, Mercurius.Siskin.Repositories" />
    
    <!-- Web API管理模块 -->
    <sqlMap embedded="WebApi.MSSQL.Api.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="WebApi.MSSQL.User.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="WebApi.MSSQL.Role.xml, Mercurius.Siskin.Repositories" />
    <sqlMap embedded="WebApi.MSSQL.RolePermission.xml, Mercurius.Siskin.Repositories" />
  </sqlMaps>
</sqlMapConfig>